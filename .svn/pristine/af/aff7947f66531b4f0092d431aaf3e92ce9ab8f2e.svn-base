.layer-popup1 .layer-inner .fixed-box-button > span {width:100% !important;} */

/* 추가정보 - 레이어 */
.contain-library-payment-layer {padding: 0 15px; margin-bottom:20px;}
.contain-library-payment-layer .text-normal-type1 {display: inline-block; font-size:14px;color:#999; margin: 0 0 10px 0;}
.contain-library-payment-layer .box-form dt,
.contain-library-payment-layer .box-form dd {width:100%;}
.contain-library-payment-layer .box-form dt {text-align: left; font-size:16px; color: #222; margin-bottom:10px;}










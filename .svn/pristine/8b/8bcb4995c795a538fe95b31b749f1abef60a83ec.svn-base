@charset "utf-8";

/* 공지사항 */
.contain-board {margin-bottom:30px;}
.contain-board li {border-bottom: 1px solid #eaeaea; }
.contain-board li:last-child {border-bottom: none;}
.contain-board li a {display: block; padding: 22px 15px;}
.contain-board li.notice {background: #f8f8f8;}
.contain-board li.notice a > p.subject {font-weight:700; color: #fd5490;}
.contain-board p.subject {display: block; width:95%; font-size: 15px; color: #222; letter-spacing: -0.75px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; overflow: hidden; }
.contain-board .subject > span {margin-right: 5px;}
.contain-board .date {display: block; margin-top:8px; font-size: 12px; color: #999;}

/* 공지사항-상세 */
.box-view-title {padding: 22px 15px; border-bottom: 1px solid #eaeaea; position: relative;}
.box-view-title .subject {font-size:15px; font-weight:400; letter-spacing: -0.75px; margin-bottom:8px;}
.box-view-title .subject > span {margin-right: 5px;}
.box-view-title .subject.line2 {overflow: hidden; text-overflow: ellipsis; max-height: 42px; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2;}
.box-view-title .count,
.box-view-title .date {font-size: 12px; color: #999;}
.box-view-title .count::after {content:'';display:inline-block;margin:0 3px 2px 8px;vertical-align:middle;width:1px;height:10px;background:#999;}
.box-view-title .name {font-size:13px; position: absolute; right: 15px; bottom: 10px; /* z-index: 10; */}
.box-view-title .name img {width: 30px; height:30px; margin-right: 5px; border-radius: 100%;}

.box-view-content {margin: 0 15px;}
.box-view-content .file {padding: 20px 0; border-bottom:1px solid #f0f0f0;}
.box-view-content .file a {color: #fd5490; line-height:18px;}
.box-view-content .file a::before {content:''; display:inline-block; margin: 0 8px 0 3px; width:14px; height:18px; background:url(../../images/img_board_file.png) no-repeat left 50%; background-size:100%; vertical-align: middle;}
.box-view-content .content {padding:20px 0; font-size:15px; color: #222;}
.box-view-content .content img {width:100%;}
.box-view-content .content iframe {width:100%; height: 400px;}

.box-board-btn {text-align: right; margin: 20px 15px;}
.box-board-btn span[class^='btn-type-'].btn-type-text7 {margin: 0 0 0 4px;}
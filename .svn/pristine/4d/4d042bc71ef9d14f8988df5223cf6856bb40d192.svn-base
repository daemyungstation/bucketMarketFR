@charset "utf-8";

/* 검색-검색결과 */
.contain-search-box {padding:0 0 60px 0;}
.box-search-result {width:100%; margin: 0 0 20px 0; padding-bottom:40px; color: #707070; font-size:15px; text-align: center; border-bottom:1px solid #d9d9d9;}
.text-result {font-size:30px; margin-bottom:15px; line-height:44px; color: #666;}

/* 검색-검색결과없음 */
.box-search-none {width:100%; margin: 0 0 0 0; padding-bottom:80px; text-align: center; border-bottom:1px solid #d9d9d9;}
.box-search-none .text-result::before {content:'';display:block;margin:0 auto 20px auto;width:86px;height:86px; background: url(../images/img_search_error.png) no-repeat 50%;background-size:auto 100%;}
.box-search-none li {margin: 3px 0;}

/* 검색-핫키워드 */
.box-hotkeyword {margin:60px auto 0; width:820px; text-align: center; overflow: hidden;}
.box-hotkeyword .title {font-size:30px; margin-bottom:35px; font-weight:normal; line-height:150%;}
.box-hotkeyword .keyword {float:none; margin: 8px 4px;}
.box-hotkeyword .keyword > a {font-size:13px;}

/* 검색-핫키워드 */
.contain-curation-box {padding: 60px 0 100px 0;}
.box-curation-head {border-top:2px solid #222; text-align: center; margin: 0; padding:60px 0;}
.box-curation-head .title {display: block; margin-bottom: 15px; font-size:30px; line-height:42px; color: #222;}
.box-curation-head > p {font-size: 15px; line-height: 28px; color: #666;}

.box-curation-step {border-top:1px solid #d9d9d9; text-align: center; margin-bottom: 30px; padding-top: 60px;}
.box-curation-step .subject {text-align: left; margin: 0 0 60px 0; font-size:22px; line-height: 34px;}
.box-curation-step .subject > span {display: inline-block; font-size: 22px; margin-right: 19px; text-decoration: underline;}

.box-curation-icon {margin: 0 0 35px 0; width: 100%; overflow: hidden; display: flex; flex-wrap: wrap;}
.box-curation-icon > .keyword {float: none;}
.keyword {background: #f2f2f2;}
.box-curation-icon .curation-icon {float:left; display: block;  min-width:189px; /* min-width:192px; */ height:auto; min-height:100px; background-color: #f2f2f2; border-radius: 25px; margin: 0 12px 25px 12px; overflow: hidden; box-sizing: border-box;}
/* .box-curation-icon .curation-icon:nth-of-type(6n) {margin: 0 0 25px 0;}  */
.box-curation-icon .curation-icon a {/* display: table-cell;  */vertical-align: middle; font-size: 18px; color:#777; text-decoration: none; border-radius: 25px; box-sizing: border-box; line-height: 23px; padding: 20px; width:100%; height:100%; float:left; display: flex; align-items: center; justify-content: center; word-break: keep-all;}
.box-curation-icon .curation-icon.on {background: #fff; border:2px solid #fd5490; box-sizing:border-box; display: inline-block;}
.box-curation-icon .curation-icon.on a {color: #fd5490;}
.contain-curation-box .box-btn {margin: 75px auto 0;}
.contain-curation-box .box-btn .btn-type-text1 {width:350px; height:60px;}
.contain-curation-box .box-btn .btn-type-text1 button {font-size:24px; line-height:58px;}

/* 큐레이션-내가 선택한 키워드 */
.box-curation-step.type2 {border-top:none; padding: 0 0 60px 0; margin: -15px 0 60px 0; border-bottom:1px solid #d9d9d9;}
.box-curation-step.type2 .box-curation-icon {justify-content: center; /* width:900px; */ margin: 0 auto 35px; /*  border:1px solid red; */}
.box-curation-step.type2 .curation-icon {float:none; /* margin: 0 12px 25px 12px; */}
.contain-curation-box .btn-type-text3 {width:360px; height:58px; margin:0 auto;}
.contain-curation-box .btn-type-text3  button{font-size:24px; line-height:56px;}

/* 큐레이션-검색결과없음 */
.box-search-none.type2 {border:none; padding:0px;} 
.box-curation-step.type3 {padding-top:7px; margin-bottom:0px; border-top:none;}
.box-curation-step.type3 .box-curation-icon {justify-content: center; margin: 0 0 60px 0;}
.box-curation-step.type3 .keyword {margin: 0 6px;}
.box-curation-step.type3 .keyword a {font-size:13px; padding: 6px 18px;}
.box-curation-step.type3 .btn-type-text4 {background: #d9d9d9; height:58px; border-radius: 0px;}
.box-curation-step.type3 .btn-type-text4 button {font-size: 24px; line-height:58px;}
.box-curation-step.type3 .btn-type-text4 button::after {display:none;}



